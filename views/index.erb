<!doctype html>



<html>
<head>
	<link rel="stylesheet" href="css/bootstrap.css">
	<link rel="stylesheet" href="css/style.css">
	<script src="bootstrap.js"></script>
	<title>Holidays!</title>
</head>
<body>

	<form>
		<p>Month (1-12)</p>
		<input name="month" type="number" min="1" max="12" value="<%= params[:month] %>" required>
		<p>Day (1-31)</p>
		<input name="day" type="number" max="31" value="<%= params[:day] %>" required>
		<p>Year (xxxx)</p>
		<input name="year" type="number" value="<%= params[:year] %>" required>
		<button type="submit">Submit!</button>
	</form>

	<% if @current_holidays.any? %>
  	<h3>US Holidays</h3>
		<% @current_holidays.each do |holiday| %>
			<ul>
				<li><%= holiday['name'] %>, <%=holiday['date'] %></li>
			</ul>
		<% end %>
	<% else %>
  	<h3>No results match your entered date</h3>
	<% end %>
	
</body>
</html>
